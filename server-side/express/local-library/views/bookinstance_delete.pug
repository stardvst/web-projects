extends layout

block content
  h1 ID: #{bookinstance._id}

  if book
    p #[strong Delete the following book before attempting to delete this book instance.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book
      dl
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
  else
    p Do you really want to delete this Book Instance?

    form(method='POST' action='')
      div.form-group
        input#bookinstanceid.form-control(type='hidden' name='bookinstance' required='true', value=bookinstance._id )
      button.btn.btn-primary(type='submit') Delete
